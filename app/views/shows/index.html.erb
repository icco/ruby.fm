<div class="center container">
  <h1 class="h1 mt4">Collections</h1>
  <hr>
</div>
<div class="clearfix px4">
  <% @shows.each do |show| %>
    <div class="col col-12 sm-col-4 md-col-3 lg-col-3">
      <div class="mb3 px2">
        <%= link_to show.name, show, class: 'block bg-gray center white py4' %>
      </div>
    </div>
  <% end %>
</div>
  <% if current_user %>
    <div class="center clearfix mt4">
      <%= link_to 'Make your own collection', new_show_path, class: "button button-outline black" %>
    </div>
  <% end %>
