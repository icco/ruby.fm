<header class="center py3">
  <h1 class="m0">
    <%= @episode.title %>
    <span class="regular"><%= @episode.visible? ? '' : '(Not Visible)' %></span>
    <%= link_to 'Edit', edit_episode_path(@episode.id)  %>
  </h1>
  <p><%= link_to(@channel.title, channel_path(@channel), class: "gray") %></p>
</header>

<img src="http://www.drinkamara.com/wp-content/uploads/2015/03/bacon_blog_post.jpg"
width="400" height="400" class="block mb2 mx-auto" />

<audio src="<%= @episode.audio %>" type="audio/mpeg" preload="auto" controls
  class="mx-auto block">
  Your browser does not support the audio element.
</audio>

<h3 class="center">Show Notes</h3>
<p class="h3 px4"><%= @episode.notes %></p>

<%= render 'channels/subscribe' %>
