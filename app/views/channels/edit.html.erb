<h1>Edit Channel</h1>

<%= form_for(@channel) do |f| %>
  <% if @channel.errors.any? %>
    <div id="error_explanation">
      <h2>Channel could not be saved</h2>

      <ul>
      <% @channel.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label(:title) %><br>
    <%= f.text_field(:title) %>
  </div>

  <div class="field">
    <%= f.label(:slug) %><br>
    <%= f.text_field(:slug) %>
  </div>

  <div class="field">
    <%= f.label(:author) %><br>
    <%= f.text_field(:author) %>
  </div>

  <div class="field">
    <%= f.label(:published) %><br>
    <%= f.check_box(:published) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', channels_path %>
