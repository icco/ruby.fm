<div class="col-6 px2 py4 mx-auto">
  <header class="center">
    <h1 class="m0">Login</h1>
    <p>Welcome back, we missed ya a little bit.</p>
  </header>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', class: 'block full-width field-light' %>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'block full-width field-light' %>

      <% if devise_mapping.rememberable? -%>
        <label class="block full-width mb2">
          <%= f.check_box :remember_me, checked: true %>
          Remember me
        </label>
      <% end -%>

      <%= f.submit "Login", class: 'button full-width regular bg-blue white mb2' %>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
