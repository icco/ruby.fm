<div class="flex flex-center" style="min-height: 100vh;">
<div class="lg-col-4 px2 py4 mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', class: 'field col-12 mb2' %>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'field col-12 mb2' %>

      <% if devise_mapping.rememberable? -%>
        <label class="block full-width mb2">
          <%= f.check_box :remember_me, checked: true %>
          Remember me
        </label>
      <% end -%>

      <%= f.submit "Log In", class: 'btn btn-primary col-12 mb2' %>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
</div>
