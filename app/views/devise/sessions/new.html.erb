<div class="container mt4">
  <div class="col-4 px2 py4 mx-auto">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', class: 'block full-width field-light' %>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'block full-width field-light' %>

      <% if devise_mapping.rememberable? -%>
        <label class="block full-width mb2">
          <%= f.check_box :remember_me, checked: true %>
          Remember me
        </label>
      <% end -%>

      <%= f.submit "Log in", class: 'button button-outline black mb2' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
