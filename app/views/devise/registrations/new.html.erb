<div class="lg-col-6 px2 py4 mx-auto">
  <header class="center">
    <h1 class="m0">Sign Up</h1>
    <p>You're 30 seconds away from publishing super dope things. Good luck.</p>
  </header>
  <%= form_for(@signup, url: user_registration_path) do |f| %>
    <% unless @signup.errors.empty? %>
      <% @signup.errors.messages.each do |field, messages| %>
      <p><%= I18n.t("signup.#{field}") %>: <%= messages.join(', ') %></p>
      <% end %>
    <% end %>
    <%= f.text_field :full_name, autofocus: true, placeholder: 'Full Name', class: 'block full-width field-light' %>
    <div class="flex mb1">
      <%= f.text_field :channel_name, placeholder: 'Subdomain', class: "col-6 m0 field-light rounded-left"  %>
      <p class="col-6 button rounded-right border-left black bg-silver">.ruby.fm</p>
    </div>
    <%= f.email_field :email, placeholder: 'Email', class: 'block full-width field-light' %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'block full-width field-light' %>
    <% if @validatable %>
      <p class="h6 gray">(<%= @minimum_password_length %> characters minimum)</p>
    <% end %>

    <%= f.submit "Sign Up", class: 'button full-width regular bg-blue white mb2' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
