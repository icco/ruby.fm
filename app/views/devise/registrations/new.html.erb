<div class="col-6 px2 py4 mx-auto">
  <header class="center">
    <h1 class="m0">Sign Up</h1>
    <p>You're 30 seconds away from publishing super dope things. Good luck.</p>
  </header>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%#= f.text_field :name, autofocus: true, placeholder: 'Full Name', class: 'block full-width field-light' %>
    <%= f.email_field :email, placeholder: 'E-mail', class: 'block full-width field-light' %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'block full-width field-light' %>
    <% if @validatable %>
      <p class="h6 gray">(<%= @minimum_password_length %> characters minimum)</p>
    <% end %>

    <%= f.submit "Sign Up", class: 'button full-width regular bg-blue white mb2' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
