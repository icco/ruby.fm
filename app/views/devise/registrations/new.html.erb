<div class="container mt4">
  <div class="col-4 px2 py4 mx-auto">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', class: 'block full-width field-light' %>

      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'block full-width field-light' %>
      <% if @validatable %>
        <p class="h6 gray">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>

      <%= f.submit "Sign Up", class: 'button button-outline black mb2' %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
