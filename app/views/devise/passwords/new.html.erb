<div class="col-6 px2 py4 mx-auto">
  <header class="center">
    <h1 class="m0">Reset Password</h1>
    <p>You should really look into <%= link_to "1Password", "https://agilebits.com/onepassword" %> dude.</p>
  </header>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', class: 'block full-width field-light' %>
      <%= f.submit "Reset Password", class: 'button full-width regular bg-blue white mb2' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
