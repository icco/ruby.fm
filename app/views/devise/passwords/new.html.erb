<div class="container mt4">
  <div class="col-4 px2 py4 mx-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', class: 'block full-width field-light' %>
      <%= f.submit "Reset password", class: 'button button-outline black mb2' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
