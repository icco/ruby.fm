<header class="center py4 border-bottom mb4">
  <h1 class="mt0">No-nonsense podcast hosting</h1>
  <p>Self publishing made as simple as dragging and dropping audio files.</p>
  <%= link_to "Sign up →", new_user_registration_path, class: "h3 btn btn-primary px4 py2 mb1" %>
  <small class="gray block">Free while in beta</small>
</header>

<h4 class="center caps gray h6 p2 mxn2">Featured Episodes</h4>
<section class="flex flex-wrap mb4">
  <% @episodes.each do |t| %>
    <div class="flex col-6 md-col-4 lg-col-3 p2 border-box">
      <div class="">
        <%= link_to(slugged_channel_episode_path(@channel.slug, t.slug)) do %>
          <%= image_tag(Imgix.client.path(t.image.s3_path).fit('crop').width(400).height(400).to_url, class: 'block col-12') %>
        <% end %>
          <div class="mt1">
            <h2 class="h4 m0 black">
              <%= link_to( t.title, slugged_channel_episode_path(@channel.slug, t.slug), class: 'black') %>
            </h2>
          <h4 class="h5 regular gray m0">
            <%= "#{time_ago_in_words(t.created_at)} ago" %>
            ∙
            <%= distance_of_time_in_words(t.length) %>
          </h4>
        </div>
      </div>
    </div>
  <% end %>
</section>
